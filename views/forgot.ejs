<%- include('./layouts/top') -%>
<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <div class="card px-5 py-5" id="form1">
        <% if (message) { %>
          <div class="<%= messageType %>" role="alert">
            <svg
              class="bi flex-shrink-0 me-2"
              width="24"
              height="24"
              role="img"
              aria-label="<%= ariaLabel %>"
            >
              <use xlink:href="<%= xlink %>" />
            </svg>
            <div><%= message %></div>
          </div>
          <% } %>
        <h3 class="text-center"><%= title %></h3>
        <h9 class="text-center"
          ><a style="font-size: 0.9rem; text-decoration: none; color: #6c757d">
            New to TestBlogs? Register your account</a
          >
          <a
            href="/user/register"
            style="font-size: 0.9rem; text-decoration: none"
            >here!</a
          ></h9
        >
        <br />
        <form
          action="/user/forgot"
          method="POST"
          novalidate
          class="needs-validation"
        >
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <div class="input-group mb-2 mr-sm-2">
              <div class="input-group-prepend">
                <div
                  class="input-group-text"
                  style="display: block; border-radius: 0rem"
                >
                  <i class="fa-solid fa-envelope"></i>
                </div>
              </div>
              <input
                type="email"
                class="form-control"
                name="email"
                aria-describedby="emailHelp"
                required
              />
            </div>
            <div id="emailHelp" class="form-text">
              We'll send a reset link to your email.
            </div>
            <div class="invalid-feedback">Please enter a valid email.</div>
          </div>
          <div class="text-center">
            <button class="btn btn-primary">
              <i class="fa-solid fa-right-to-bracket"></i> Send Reset Link
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('./layouts/bottom') -%>
